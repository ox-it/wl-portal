     <script language="javascript" type="text/javascript">

         // case insensitive version of :contains
         jQuery.extend(
            jQuery.expr[':'], {
                Contains: "jQuery(a).text().toUpperCase().indexOf(m[3].toUpperCase())>=0"
            }
         );
  
         jQuery(document).ready(function() {
             jQuery('#imgSearch').hide();
             jQuery('#imgSearch').click(function() {
                 resetSearch();
             });
  
             jQuery('#txtSearch').keyup(function(event) {
             if (event.keyCode == 27) {
                     resetSearch();
                 }
             });
  
             jQuery('#txtSearch').keyup(function() {
                  if (jQuery('#txtSearch').val().length > 2) {
                     jQuery('#tblSearch tr').hide();
                     // jQuery('#tblSearch tr:first').show();
                     jQuery('#tblSearch tr td:Contains(\'' + jQuery('#txtSearch').val() + '\')').parent().show();
                     jQuery('#imgSearch').show();
                 }
                 if (jQuery('#txtSearch').val().length == 0) {
                     resetSearch();
                 }
  
                 // Should be <=1 if there is a header line
                 if (jQuery('#tblSearch tr:visible').length < 1) {
                     jQuery('.norecords').remove();
                     jQuery('#tblSearch').append('<tr class="norecords"><td colspan="5" class="Normal">No records were found</td></tr>');
                 }
             });
         });
  
function resetSearch() {
             jQuery('#txtSearch').val('');
             jQuery('#tblSearch tr').show();
             jQuery('.norecords').remove();
             jQuery('#imgSearch').hide();
             jQuery('#txtSearch').focus();
         }


jQuery(document).ready(function() {
  var toggle = function(direction, display) {
    return function() {
      var self = this;
      var ul = jQuery("ul", this);
      if( ul.css("display") == display && !self["block" + direction] ) {
        self["block" + direction] = true;
        ul["slide" + direction]("slow", function() {
          self["block" + direction] = false;
        });
      }
    };
  }
  // jQuery("li.nav-menu").hover(toggle("Down", "none"), toggle("Up", "block"));
  // jQuery("li.nav-menu ul").hide();
});

jQuery(document).ready(function(){
	jQuery("ul.subnav").parent().append('<span class="drop"></span>'); 
	jQuery("ul.topnav li span.drop").click(function() { 

		jQuery(this).parent().find("ul.subnav").slideDown('fast').show(); 

		jQuery(this).parent().hover(function() {
		}, function(){
			jQuery(this).parent().find("ul.subnav").slideUp('slow'); 
		});

		}).hover(function() {
			jQuery(this).addClass("subhover"); //On hover over, add class "subhover"
		}, function(){	//On Hover Out
			jQuery(this).removeClass("subhover"); //On hover out, remove class "subhover"
	});

});

