<div id="siteBanner" style="#if (${banner.backgroundColour})background-color: ${banner.backgroundColour}; #end
					 #if (${banner.backgroundImage})background-image: url('${banner.backgroundImage}'); #end">
	<div>
		<h1 #if(${banner.fontColour}) style="color: ${banner.fontColour};" #end>
			${banner.message}
		</h1>
	</div>
	<div>
		<a href="${banner.imageLink}">
			<img src="${banner.imageSource}" />
		</a>
	</div>
</div>
<div class="clear"></div>
<!-- END from includeSiteBanner.vm -->

